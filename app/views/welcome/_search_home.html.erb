<div class="col-md-12 d-flex align-items-center" style="width: 100%; height: 350px; background-image: url(<%= image_url('skyline-bg.jpg') %>); background-size: 100% auto; background-position: top;">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <%= image_tag image_url('jomazon-logo-v2.png'), class: 'search-logo' %>
        <%= form_tag search_path do %>
            <div class="input-group mb-3">
                <%= text_field_tag 'search', nil, placeholder: "Search Jomazon...", class: 'form-control' %>
                <%= submit_tag 'Search', class: 'btn btn-secondary' %>
            </div>
        <% end %>
    </div>
</div>