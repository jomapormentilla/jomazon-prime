<div class="card mb-3" style="width: 100%;">
    <div class="row g-0">
        <div class="col-md-4">
            <%= user_image( seller ) %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h3 class="card-title"><%= link_to "#{ seller.first_name } #{ seller.last_name }", user_path(seller) %></h3>
                <p class="card-text">
                    <i class="bi-person"></i> &nbsp; <%= link_to seller.company_name, user_path( seller ) %><br />
                    <span><i class="bi-envelope"></i> &nbsp; <%= seller.email %></span><br />
                    </p>
                <span>Num Products: <%= seller.products.size %></span>
                <p class="card-text"><small class="text-muted">Member Since: <%= parse_timestamp( seller.created_at ) %></small></p>
            </div>
        </div>
    </div>
</div>