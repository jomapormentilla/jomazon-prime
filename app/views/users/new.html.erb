<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <br />
        <h1>Create An Account</h1>
        <hr />
        <%= render partial: 'layouts/errors', locals: { object: @user } %>
        <%= render partial: 'form', locals: { user: @user } %>
        
        <hr />
        <p class="text-center">Already a Member? <%= link_to 'Sign In', login_path %> Here</p>

        <hr />
        <div class="d-grid gap-2">
            <%= link_to 'Sign Up with Google', '/auth/google_oauth2', method: 'post', class: 'btn btn-custom' %>
        </div>
    </div>
</div>