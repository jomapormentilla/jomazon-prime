<hr />
<h3>History</h3>
<table class="table table-striped table-bordered table-condensed">
    <% user.actions.order(id: :desc).each do |action| %>
    <tr>
        <td><%= action.created_at.strftime("%m-%d-%Y") %></td>
        <td><%= action.content %></td>
        <td><%= number_to_currency action.price %></td>
    </tr>
    <% end %>
</table>