<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h1>Create a New Product</h1>
        <% if @product.errors.any? %>
            <div class="alert alert-danger">
                <% @product.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </div>
        <% end %>

        <%= render partial: 'form', locals: { product: @product, departments: @departments, store: @store, user: current_user } %>
    </div>
</div>

