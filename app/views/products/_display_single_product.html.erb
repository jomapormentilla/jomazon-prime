<div class="card mb-3" style="width: 100%;">
    <div class="row g-0">
        <div class="col-md-4">
            <%= product_image( product ) %>
        </div>
        <div class="col-md-8">
        <div class="card-body">
            <h1 class="card-title"><%= product.name %></h1>
            <h6><%= link_to product.seller.company_name, user_path(product.seller) %></h6>
            <h2><%= number_to_currency product.price %></h2>
            
            <p>Rating: <strong class="rating"><%= product.get_rating %></strong> (<%= product.ratings.size %> rating<%=  's' if product.ratings.size != 1 %>)
            <br /><%= product.quantity %> in stock.</p>
            
            <p class="card-text" style="font-size: 15px;"><%= product.description %></p>
            <p class="card-text"><small class="text-muted">Last Updated: <%= parse_timestamp(product.updated_at) %></small></p>
            <div class="d-grid gap-2">
                <%= product_edit_or_add_to_cart( product ) %>
            </div>
        </div>
        </div>
    </div>
</div>