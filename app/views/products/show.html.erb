<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h1><%= @product.name %></h1>
        <table class="table table-bordered table-condensed">
            <tr>
                <td colspan="2"><%= @product.image %></td>
            </tr>
            <tr>
                <td>Name:</td>
                <td><%= @product.description %></td>
            </tr>
            <tr>
                <td>Price:</td>
                <td><%= @product.price %></td>
            </tr>
            <tr>
                <td>Quantity:</td>
                <td><%= display_quantity %></td>
            </tr>
            <tr>
                <td>Department:</td>
                <td><%= @product.department.name.capitalize %></td>
            </tr>
        </table>

        <div class="d-grid gap-2">
            <%= link_to 'Edit this Product', edit_product_path(@product), class: 'btn btn-outline-warning' %>
        </div>
    </div>
</div>
