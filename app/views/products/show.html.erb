<br />
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-6">
        <%= render partial: 'display_single_product', locals: { product: @product } %>

        <hr />
        <h3>Reviews <small class="text-muted">(<%= @reviews.size %>)</small></h3>
        <%= form_for @review do |f| %>
            <%= f.hidden_field :product_id, value: @product.id %>
            <%= f.text_area :content, placeholder: 'Add your review here...', class: 'form-control' %>
            <br />
            <%= f.submit 'Post Your Review', class: 'btn btn-custom' %>
        <% end %>

        <br />
        <%= display_reviews %>

        <hr />
        <h3>Related Products</h3>
        <div class="row">
            <%= render partial: 'products/display_products_slim', locals: { products: @related_products } %>
        </div>
    </div>

    <div class="col-md-2">
        <%= display_cart %>
    </div>
</div>

<br />
