    <div class="d-sm-none d-md-block col-md-2 text-end" style="border-right: solid 1px #aaa">
        <%= list_users_or_departments %>
    </div>
    <div class="col-md-10">
        <div class="float-end">
            Sort By: 
            <%= link_to 'Name', "#{ current_path }?sort=name" %> - 
