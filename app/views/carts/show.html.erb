<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h1><%= current_user.first_name %>'s Cart <small class="text-muted">(<%= @cart.size %>)</small></h1>

        <%= display_cart_products( @cart ) %>

        <h1 style="text-align: right;"><small class="text-muted">Total:</small> <span style="color: #3e5da1;"><%= number_to_currency @user.cart.total_price %></span></h1>

        <div class="d-grid gap-2">
            <%= link_to 'Place Order', checkout_path, method: 'post', class: 'btn btn-success' %>
        </div>
    </div>
</div>

